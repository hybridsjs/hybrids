{
  "name": "hybrids",
  "version": "1.0.0",
  "description": "UI library for creating Web Components",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "jsnext:main": "esm/index.js",
  "author": "Dominik Luba≈Ñski <dominik.lubanski@gmail.com>",
  "repository": "https://github.com/hybridsjs/hybrids",
  "scripts": {
    "dev": "karma start",
    "dev:coverage": "rm -rf ./coverage && NODE_ENV=coverage npm run dev",
    "test": "karma start --single-run",
    "test:coverage": "rm -rf ./coverage && NODE_ENV=coverage npm run test",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "build": "npm run build:cjs && npm run build:esm && npm run build:dist",
    "build:cjs": "rm -rf ./lib && NODE_ENV=cjs babel ./src -d ./lib -s inline",
    "build:esm": "rm -rf ./esm && babel ./src -d ./esm -s inline",
    "build:dist": "rm -rf ./dist && webpack",
    "release": "npm run test && npm run build && standard-version"
  },
  "keywords": [
    "web components",
    "custom elements",
    "shadow dom"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.7.6",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-env": "^1.5.1",
    "babel-preset-stage-3": "^6.24.1",
    "core-js": "^2.5.4",
    "coveralls": "^3.0.0",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "standard-version": "^4.3.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11"
  },
  "dependencies": {
    "@webcomponents/custom-elements": "^1.0.2",
    "@webcomponents/shadycss": "^1.0.5",
    "@webcomponents/shadydom": "^1.0.4",
    "@webcomponents/template": "^1.0.0",
    "@webcomponents/webcomponents-platform": "^1.0.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true
    },
    "rules": {
      "no-debugger": 0,
      "no-param-reassign": 0,
      "no-new-func": 0,
      "no-loop-func": 0,
      "new-cap": 0,
      "prefer-destructuring": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "test/**/*.js"
          ]
        }
      ]
    },
    "globals": {
      "test": true
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ],
      "stage-3"
    ],
    "env": {
      "cjs": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ]
        ]
      },
      "coverage": {
        "plugins": [
          [
            "istanbul",
            {
              "include": [
                "src/**/*.js"
              ]
            }
          ]
        ]
      }
    }
  }
}
