{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "jasmine": true
  },
  "rules": {
    "no-debugger": 0,
    "no-param-reassign": 0,
    "no-new-func": 0,
    "no-loop-func": 0,
    "new-cap": 0,
    "prefer-destructuring": 0,
    "block-scoped-var": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "test/**/*.js"
        ]
      }
    ],
    "import/extensions": [2, "always"]
  }
}